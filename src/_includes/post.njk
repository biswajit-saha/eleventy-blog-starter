---
layout: base
---
<section class="px-6 md:px-8 mt-8">
    <div class="max-w-screen-lg xl:max-w-screen-xl mx-auto">
        <h1 class="text-center mb-10">{{title}}</h1>
    </div>
    <div class="max-w-2xl justify-between mx-auto">
        <article class="pb-10 mb-10">
            <div class="mt-8">
                <time datetime="{{ page.date | htmlDateString }}">{{page.date | readableDate }}</time>
                {% set comma = joiner() %}
                {% for tag in tags %}
                    {% if loop.first %}
                    <span class="mx-2">â€¢</span>
                    {% endif %}
                    {% if tag !== 'posts' %}
                    <a href="/blog/{{tag | slug }}/">{{tag}}</a>{{ '' if loop.last else ',' }}
                    {% endif %}
                {% endfor %}
            </div>
            <div class="prose sm:prose-lg md:prose-xl lg:prose-2xl prose-red">
                {{ content | safe }}
            </div>
        </article>
    </div>
</section>