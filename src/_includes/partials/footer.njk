<footer class="px-6 md:px-8 border-t border-gray-100 py-10">
    <div class="flex flex-col md:flex-row-reverse content-center justify-between items-center max-w-screen-lg xl:max-w-screen-xl mx-auto">
        <div class="space-x-4 flex justify-center">
        {% for site in social %}
            {% if site.url %}
            <a href="{{site.url}}" class="inline-flex text-gray-500 hover:text-red-500">
                {% svg site.icon, "w-5 h-5 fill-current" %}
            </a>
            {% endif %}
        {% endfor %}
    </div>
    <div class="text-center mt-6 md:mt-0">
        &copy; <a href="{{'/' | url}}" class="hover:text-red-500">{{site.title}}</a>. All Right reserved.
    </div>
    </div>    
</footer>