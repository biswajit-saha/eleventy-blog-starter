    {% set tagUrl %}/tags/{{ tag | slug }}/{% endset %}
    <a href="{{ tagUrl | url }}" class="text-lg border rounded-md h-12 leading-12 inline-flex px-8 m-2 hover:border-red-600 hover:bg-red-600 hover:text-white">{{ tag }}</a>
    {% endfor %}
</div>