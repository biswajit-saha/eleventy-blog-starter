---
layout: "blog.njk"
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - posts
    - tagList
  addAllPagesToCollections: true
eleventyComputed:
  title: "{{ tag }}"
permalink: /tag/{{ tag | slug }}/
---

<section class="px-6 md:px-8 mt-8">
    <div class="max-w-screen-lg xl:max-w-screen-xl mx-auto">
        <div class="text-center mb-2 uppercase">tag</div>
        <h1 class="text-center mb-10">{{title}}</h1>
    </div>
    {% set posts = collections[ tag ] %}
    {% include "partials/postlist.njk"%}
</section>
